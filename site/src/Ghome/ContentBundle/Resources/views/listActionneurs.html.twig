		<script type="text/javascript">
			function fnFormatDetails ( id )
			{
				var sOut = '<a style="width:30%" type="button" class="btn btn-success" href="/ghome/site/web/app_dev.php/actionneurOn?idActionneur='+id+'">On</a> ';
				sOut+= '<a style="width:30%" type="button" class="btn btn-danger"  href="/ghome/site/web/app_dev.php/actionneurOff?idActionneur='+id+'">Off</a>';
				return sOut;
			}


    		var table = $('#table_actionneurs').dataTable();

    		function fnDetails(element) 
    		{
				var nTr = element.parentNode.parentNode.parentNode;
				if ( element.className == 'glyphicon glyphicon-minus' )
				{
					/* This row is already open - close it */
					element.className="glyphicon glyphicon-plus";
					table.fnClose( nTr );
				}
				else
				{
					/* Open this row */
					element.className="glyphicon glyphicon-minus";
					table.fnOpen( nTr, fnFormatDetails(nTr.id), 'details text-center' );
				}
			}	

		</script>