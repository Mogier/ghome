					  <td>{{ act.idEspace.id }}</td>
					  <td> <a type="button" class="btn btn-danger btn-sm" href="/ghome/site/web/app_dev.php/deleteSpace/{{act.id}}">Suppr</a></td>
				</tr>	
		{% endfor %}
		</tbody>
	</table>
