{% extends '::base.html.twig' %}

{% block body %}

	<table id="table_spaces">
		<thead>
			<tr id="search">
				<th>Nom</th>
				<th>Description</th>
			</tr> 
		</thead>					  
		<tbody id="spaces">	
		{% for sp in spaces %}
				<tr id="{{ sp.id }}">
					  <td>{{ sp.nom }}</td>
					  <td>{{ sp.description }}</td>
				</tr>	
		{% endfor %}
		</tbody>
	</table>

{% endblock %}

{% block javascripts %}
	   {{ parent() }}
		<script src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js">
		</script>	
{% endblock %}